pipeline{
    agent any
    environment{
        namma_ooru ="dindigul"
    }

    stages{
        stage('build only'){
            steps{
                echo "proceed to build"
            }
        }

        stage('entha ooru stage'){

            when{

                anyOf {
                    expression {BRANCH_NAME ==~ /(production|staging)/}
                    environment name: 'namma_ooru' , value :"dindigulu"
                }
                
            }

            steps{
                echo "thambi entha ooru"
            }
        }
    }
}

