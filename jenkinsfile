pipeline{
    agent any
    parameters{
        string(name:'change_reference',defaultValue:'CH12345',description:'please enter your change reference')
        booleanParam(name:'is SRE approved ?',defaultValue:true ,description:'is approval ')
        choice(name:'vagaigal',choices:'regular\nhotfix',description:'what release is this')
        password(name:'mypassword is',defaultValue:'dummy',description:'enter the password')
    }
    stages{
        stage('deploy to dev'){
            steps{
                echo "deployed to dev successfully"
            }
        }
        stage('deploy to prod'){
            steps{
                echo "your change reference ${params.change_reference}is validated"
                echo "deploying to prod"
                echo "this is a ${params.vagaigal}"
                echo "the password is ${params.mypassword}"
            }
        }
    }
}
